<%- include('../boilerplate/header') %>

    <div class="container-fluid">
        <header>
            <div class="jumbotron-fluid">
                <h1 class="display-4">These are our camps</h1>
                <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add a new one!</a>
            </div>
        </header>

        <section>
            <div class="container">
                <div class="row content-center">
                    <% campgrounds.forEach(camp => { %>
                        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12 my-3">
                            <figure>
                                <img class="img-fluid rounded" src=<%=camp[ "image"]%>>
                                <figcaption>
                                    <p>
                                        <%=camp["name"]%>
                                    </p>
                                    <p><a href="/campgrounds/<%=camp._id%>" class="btn btn-outline-dark btn-lg">More info</a></p>
                                </figcaption>
                            </figure>
                        </div>
                        <% }); %>
                </div>
            </div>
        </section>
    </div>
    <%- include('../boilerplate/footer') %>