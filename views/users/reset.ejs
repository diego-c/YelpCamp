<%- include('../boilerplate/header') %>
    <div class="container text-center">
        <h1>Reset your password:</h1>
        <form action="/reset/<%=token%>" method="POST">
            <div class="form-group">
                <label for="password">New password (maximum length: 60 characters):</label>
                <input type="password" class="form-control" name="password" required maxlength="60">
            </div>
            <div class="form-group">
                <label for="confirm">Confirm new password:</label>
                <input type="password" class="form-control" name="confirm" required maxlength="60">
            </div>
            <button type="submit" class="btn btn-lg btn-primary">Submit</button>
        </form>
    </div>
    <%- include('../boilerplate/footer') %>